{
  "type": "desktop",
  "base_app_dir": "app",
  "development_server": {
    "host": "0.0.0.0",
    "port": "7000",
    "mount": "/",
    "open": true,
    "open_url": "/?example=value",
    "sass_watch_paths": [
      "assets/style",
      "assets/components",
      "views"
    ]
  },
  "build": {
    "auto_fix_font_paths_in_css": true,
    "minify": {
      "css": {
        "remove_comments": true,
        "compress": true
      },
      "js": {
        "remove_comments": true,
        "compress": true
      }
    },
    "static_files_to_copy": {
      "favicon.svg": "favicon.svg",
      "files": "files",
      "assets/img": "assets/img"
    },
    "ignored_files": [
    ]
  },
  "indexer": {
    "ignored_files": [
    ]
  },
  "hooks": {
    "before_all": "",
    "after_all": "",
    "before_build": "yarn && yarn test:prepare && yarn test:karma && npm version patch",
    "after_build": "yarn test:karma:dist",
    "before_generate": "",
    "after_generate": "",
    "before_indexer": "",
    "after_indexer": "",
    "before_server": "",
    "after_server": ""
  }
}